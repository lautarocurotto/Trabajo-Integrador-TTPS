<h1>Nuevo Turno</h1>

<%= render "form", appointment: @appointment %>

<br>


<div>
  <%= link_to "Volver a turnos", appointments_path %>
</div>

<br><br>
<div>Horarios sucursales </div>
<% @branches.each do |branch| %>
  <div class= "info-sucursales">
    <%= branch.name %>
    Apertura Lunes: <%= @schedules.find_by_id(branch.schedule_id).monday_start.strftime('%H:%M')%>
    Cierre Lunes: <%= @schedules.find_by_id(branch.schedule_id).monday_end.strftime('%H:%M')%>
    Apertura Martes: <%= @schedules.find_by_id(branch.schedule_id).tuesday_start.strftime('%H:%M')%>
    Cierre Martes: <%= @schedules.find_by_id(branch.schedule_id).tuesday_end.strftime('%H:%M')%>
    Apertura Miercoles: <%= @schedules.find_by_id(branch.schedule_id).wednesday_start.strftime('%H:%M')%>
    Cierre Miercoles: <%= @schedules.find_by_id(branch.schedule_id).wednesday_end.strftime('%H:%M')%>    
    Apertura Jueves: <%= @schedules.find_by_id(branch.schedule_id).thursday_start.strftime('%H:%M')%>
    Cierre Jueves: <%= @schedules.find_by_id(branch.schedule_id).thursday_end.strftime('%H:%M')%>
    Apertura Viernes: <%= @schedules.find_by_id(branch.schedule_id).friday_start.strftime('%H:%M')%>
    Cierre Viernes: <%= @schedules.find_by_id(branch.schedule_id).friday_end.strftime('%H:%M')%>
    <% if @schedules.find_by_id(branch.schedule_id).saturday_start%>
      Apertura Sábado: <%= @schedules.find_by_id(branch.schedule_id).saturday_start.strftime('%H:%M')%>
    <% end %>
    <% if @schedules.find_by_id(branch.schedule_id).saturday_end%>
      Cierre Sábado: <%= @schedules.find_by_id(branch.schedule_id).saturday_end.strftime('%H:%M')%>
    <% end %>
    <% if @schedules.find_by_id(branch.schedule_id).sunday_start%>
      Apertura Domingo: <%= @schedules.find_by_id(branch.schedule_id).sunday_start.strftime('%H:%M')%>
    <% end %>
    <% if @schedules.find_by_id(branch.schedule_id).saturday_end%>
      Cierre Domingo: <%= @schedules.find_by_id(branch.schedule_id).sunday_end.strftime('%H:%M')%>
    <% end %>
    <br>
  </div>
<%end %>
