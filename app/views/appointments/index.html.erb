<p style="color: green"><%= notice %></p>

<h1>Appointments</h1>

<div id="appointments">
  <% @appointments.each do |appointment| %>
    <% if appointment.branch_id == current_user.assignedbranch %>
      <%= render appointment %>
    <p>
      <%= link_to "Show this appointment", appointment %>
    </p>
    <% end %>
  <% end %>
</div>

<%= link_to "New appointment", new_appointment_path %>
